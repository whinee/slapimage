{
    "python.defaultInterpreterPath": "./pyenv/bin/python",
    "vscode-yaml-sort.useCustomSortRecursively": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "files.associations": {
        "*.mdx": "markdown"
    },
    "autoDocstring.customTemplatePath": "dev/constants/tpl/autodoc.mustache",
